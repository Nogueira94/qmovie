<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="br.com.qmovie.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_jogoFragment"
            app:destination="@id/jogoFragment" />
    </fragment>
    <fragment
        android:id="@+id/jogoFragment"
        android:name="br.com.qmovie.JogoFragment"
        android:label="fragment_jogo"
        tools:layout="@layout/fragment_jogo" >
        <action
            android:id="@+id/action_jogoFragment_to_action_lancamentosFragment"
            app:destination="@id/lancamentosFragment" />
    </fragment>
    <fragment
        android:id="@+id/lancamentosFragment"
        android:name="br.com.qmovie.LancamentosFragment"
        android:label="fragment_lancamentos"
        tools:layout="@layout/fragment_lancamentos" >
        <action
            android:id="@+id/action_lancamentosFragment_to_confirmationMessageFragment"
            app:destination="@id/confirmationMessageFragment" />
    </fragment>
    <dialog
        android:id="@+id/confirmationMessageFragment"
        android:name="br.com.qmovie.ConfirmationMessageFragment"
        android:label="ConfirmationMessageFragment" />
</navigation>