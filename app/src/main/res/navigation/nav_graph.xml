<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="br.com.qmovie.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_mainActivity2"
            app:destination="@id/mainActivity2" />
    </fragment>
    <fragment
        android:id="@+id/jogoFragment"
        android:name="br.com.qmovie.JogoFragment"
        android:label="fragment_jogo"
        tools:layout="@layout/fragment_jogo" />
    <fragment
        android:id="@+id/novoJogoFragment"
        android:name="br.com.qmovie.NovoJogoFragment"
        android:label="fragment_novo_jogo"
        tools:layout="@layout/fragment_novo_jogo" />
    <activity
        android:id="@+id/mainActivity2"
        android:name="br.com.qmovie.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>