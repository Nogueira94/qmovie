<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RankingFragment">

        <LinearLayout
            android:id="@+id/llRanking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEntreOs"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvMelhores"
                android:textColor="@color/preto"
                android:textSize="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entre os"/>

            <TextView
                android:id="@+id/tvMelhores"
                android:layout_marginLeft="20dp"
                android:textColor="@color/amarelo"
                android:textSize="50dp"
                app:layout_constraintTop_toBottomOf="@id/tvEntreOs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Melhores"/>

            <LinearLayout
                android:id="@+id/llTop3"
                app:layout_constraintTop_toBottomOf="@id/tvMelhores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/llRank2"
                    android:paddingHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clRank2"
                        android:paddingTop="70dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imR2"
                            app:layout_constraintTop_toTopOf="@id/tvR2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle_rank"/>

                        <TextView
                            android:id="@+id/tvR2"
                            android:gravity="center"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:paddingBottom="3dp"
                            android:text="2"
                            android:textSize="20dp"
                            android:textColor="@color/branco"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/preto"/>

                        <TextView
                            android:id="@+id/tvNameR2"
                            app:layout_constraintTop_toBottomOf="@id/imR2"
                            android:gravity="center"
                            android:textSize="17dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ana Clara"/>

                        <TextView
                            android:id="@+id/tvPontosR2"
                            app:layout_constraintTop_toBottomOf="@id/tvNameR2"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="300 pontos"
                            android:textSize="15dp"
                            android:padding="2dp"
                            android:textColor="@color/branco"
                            android:background="@drawable/background_botao_amarelo"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clRank1"
                        android:layout_marginHorizontal="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imR1"
                            app:layout_constraintTop_toTopOf="@id/tvR1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle_rank"/>

                        <TextView
                            android:id="@+id/tvR1"
                            android:gravity="center"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:paddingBottom="3dp"
                            android:text="1"
                            android:textSize="20dp"
                            android:textColor="@color/branco"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/preto"/>

                        <TextView
                            android:id="@+id/tvNameR1"
                            app:layout_constraintTop_toBottomOf="@id/imR1"
                            android:gravity="center"
                            android:textSize="17dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Matheus"/>

                        <TextView
                            android:id="@+id/tvPontosR1"
                            app:layout_constraintTop_toBottomOf="@id/tvNameR1"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="300 pontos"
                            android:textSize="15dp"
                            android:padding="2dp"
                            android:textColor="@color/branco"
                            android:background="@drawable/background_botao_amarelo"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clRank3"
                        android:paddingTop="70dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imR3"
                            app:layout_constraintTop_toTopOf="@id/tvR3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle_rank"/>

                        <TextView
                            android:id="@+id/tvR3"
                            android:gravity="center"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:paddingBottom="3dp"
                            android:text="3"
                            android:textSize="20dp"
                            android:textColor="@color/branco"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/preto"/>

                        <TextView
                            android:id="@+id/tvNameR3"
                            app:layout_constraintTop_toBottomOf="@id/imR3"
                            android:gravity="center"
                            android:textSize="17dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Laura"/>

                        <TextView
                            android:id="@+id/tvPontosR3"
                            app:layout_constraintTop_toBottomOf="@id/tvNameR3"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="300 pontos"
                            android:textSize="15dp"
                            android:padding="2dp"
                            android:textColor="@color/branco"
                            android:background="@drawable/background_botao_amarelo"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRanking"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/llRanking"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bar_round"
                android:backgroundTint="@color/preto"
                android:padding="15dp"
                tools:listitem="@layout/card_ranking">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>


</FrameLayout>